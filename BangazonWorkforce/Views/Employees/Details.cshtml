@model BangazonWorkforce.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Employee #@Model.Id</h4>
    <h4>@Model.FirstName @Model.LastName</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsSupervisor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsSupervisor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ComputerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Computer.Make) -- @Html.DisplayFor(model => model.Computer.Model)
        </dd>
        <h6>Traning Programs Assigned to @Model.FirstName </h6>
        <table class="table">
            <thead>


                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TrainingProgram.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TrainingProgram.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TrainingProgram.EndDate)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var trainingProgram in Model.trainingPrograms)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => trainingProgram.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => trainingProgram.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => trainingProgram.EndDate)
                        </td>
                    </tr>


                }
            </tbody>
        </table>

    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Assign New Training", "AssignTraining", new { id = Model.Id }) |


    <a asp-action="Index">Back to List</a>
</div>
